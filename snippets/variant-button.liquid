{%- assign swatch_file_extension = 'png' -%}
{%- assign is_color = false -%}
{%- assign color_swatch_drop = option_drop -%}
{%- assign color_option_index = 0 -%}

{% if settings.product_color_swatches %}
  {% for option in product.options_with_values %}
    {% if option == color_swatch_drop %}
      {%- assign color_option_index = forloop.index0 -%}
      {%- assign downcased_option = color_swatch_drop.name | downcase -%}
      {% if downcased_option contains 'color' or downcased_option contains 'colour' %}
        {%- assign is_color = true -%}
      {% endif %}
    {% endif %}
  {% endfor %}
{% endif %}

<div class="variant-wrapper variant-wrapper--{{ settings.variant_type }} js">
  <label class="variant__label{% if option.name == 'Default' or option.name == 'Title' %} hidden-label{% endif %}"
    for="ProductSelect-{{ section_id }}-option-{{ forloop.index0 }}">
    {{ option.name }}
    {% if is_color %}
      <span class="variant__label-info">
        &mdash;
        <span
          id="VariantColorLabel-{{ section_id }}-{{ forloop.index0 }}"
          data-option-index="{{ color_option_index }}">
          {{ option.selected_value }}
        </span>
      </span>
    {% endif %}
  </label>
  <fieldset class="variant-input-wrap"
    name="{{ option.name }}"
    id="ProductSelect-{{ section_id }}-option-{{ forloop.index0 }}">
    {%- assign option_index = forloop.index -%}
    {% for value in option.values %}
      {%- assign variant_label_state = true -%}
      {% if product.options.size == 1 %}
        {% unless product.variants[forloop.index0].available %}
          {% unless is_color %}
            {%- assign variant_label_state = false -%}
          {% endunless %}
        {% endunless %}
      {% endif %}
      <input type="radio"
        {% if option.selected_value == value %} checked="checked"{% endif %}
        {% unless variant_label_state %} disabled="disabled"{% endunless %}
        value="{{ value | escape }}"
        data-index="option{{ option_index }}"
        name="{{ option.name }}"
        class="variant__input-{{ section_id }}{% unless variant_label_state %} disabled{% endunless %}{% if is_color %} variant__input--color-swatch-{{ section_id }}{% endif %}"
        {% if is_color %} data-color-name="{{ value | escape }}"{% endif %}
        {% if is_color %} data-color-index="{{ color_option_index }}"{% endif %}
        id="ProductSelect-{{ section_id }}-option-{{ option.name | handleize }}-{{ value | url_encode }}">
      {% if is_color %}
        {%- assign color_image = value | handle | append: '.' | append: swatch_file_extension | asset_img_url: '50x' | prepend: 'https:' | split: '?' | first -%}
        {%- assign color_swatch_fallback = value | split: ' ' | last | handle -%}
        <label
          for="ProductSelect-{{ section_id }}-option-{{ option.name | handleize }}-{{ value | url_encode }}"
          class="variant__button-label variant__color-swatch color-swatch--{{ value | handle }}{% unless variant_label_state %} disabled{% endunless %}"
          style="background-image: url({{ color_image }}); background-color: {{ color_swatch_fallback }};"
        >
          {{ value | escape }}
        </label>
      {% else %}
        <label
          for="ProductSelect-{{ section_id }}-option-{{ option.name | handleize }}-{{ value | url_encode }}"
          class="variant__button-label{% unless variant_label_state %} disabled{% endunless %}">{{ value | escape }}</label>
      {% endif %}
    {% endfor %}
  </fieldset>
{% if downcased_option contains 'fit' %}
  {% assign count = product.images.size | minus:2 %}
	<a class="hide-fit" data-fancybox="fit-guide" href="{{ product.images[count] | product_img_url: 'master' }}"><h4><i class="fas fa-info-circle"></i>Fit Guide</h4></a>
{%endif%}
{% if downcased_option contains 'size' or downcased_option contains 'pant waist' %}
  {% assign count = product.images.size | minus:2 %}
	<a class="hide-size" data-fancybox="size-chart" href="{{ product.images.last | product_img_url: 'master' }}"><h4><i class="fas fa-info-circle"></i>Size Chart</h4></a>
{%endif%}
  
</div>
<script>
  $(window).scroll(function(){
    if($(window).width() < 560) {
      if($("body").hasClass("fancybox-active")){
        $(".fancybox-button--close").click(); 
      }
    }
    
  });
</script>

